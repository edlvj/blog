%nav.navbar.navbar-expand-md.navbar-dark.bg-dark
  %a.navbar-brand{ href: ''} Blog
  %button.navbar-toggler{"aria-controls" => "navbarCollapse", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarCollapse", "data-toggle" => "collapse", :type => "button"}
    %span.navbar-toggler-icon
  #navbarCollapse.collapse.navbar-collapse
    %ul.navbar-nav.mr-auto
      %li.nav-item
        %a.nav-link{href: root_path}
          Home
          %span.sr-only (current)
      - if current_user
        %li.nav-item.dropdown
          %a.nav-link.dropdown-toggle#navbarDropdownMenuLink{'data-toggle': "dropdown", 'aria-haspopup': "true", 'aria-expanded': "false"} Posts
          .dropdown-menu{'aria-labelledby': "navbarDropdownMenuLink"}
            %a.dropdown-item{href: posts_path(user_id: current_user.id) } My List
            %a.dropdown-item{href: new_post_path } New Post
    - if current_user
      = button_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-outline-danger"
    - else
      %a.btn.btn-outline-primary{href: new_user_session_path}
        Sign in